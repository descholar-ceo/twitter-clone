<%= simple_form_for(@tweet) do |form|%>
  <%= form.error_notification %>
  <div class="field">
    <div class="control">
      <%= form.input :tweet, label: "Tweet about it", input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" }, placeholder: "Compose a new tweet..." %>
    </div>
    <div class="control">
      <%= form.button :submit, class: "button is-info" %>
    </div>
  </div>

<% end %>
